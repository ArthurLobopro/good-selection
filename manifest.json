{
    "manifest_version": 3,
    "name": "Good Selection",
    "version": "1.0.0",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "src/content-script/index.js"
            ]
        }
    ],
    "action": {
        "default_popup": "src/popup/index.html"
    }
}